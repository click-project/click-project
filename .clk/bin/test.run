#!/bin/bash -eu

source "_clk.sh"

list_tests ( ) {
    pushd "${CLK__PROJECT}/tests" > /dev/null
    {
        ls test_*|sed -r 's/^test_(.+).py$/\1/'
    }
    popd > /dev/null
}

clk_usage () {
    cat<<EOF
$0

Description
--
A:test:$(list_tests|clk_list_to_choice):Tests to run:-1
flowdepends: test.create-docker-image
F:--pdb/--no-pdb:Stop using pdb
M:I
EOF
}

clk_help_handler "$@"


if [ "${CLK___TEST}" ]
then
    args="${CLK___TEST}"
else
    args="$(list_tests)"
fi
tests=()
for t in ${args}
do
    tests+=(/src/tests/test_${t}.py)
done

args=()
if [ -n "${CLK___PDB}" ]
then
    args+=(--pdb)
fi


clk test run-in-docker-image pytest "${args[@]}" "${tests[@]}"
