{
    "alias": {
        "build": {
            "commands": [
                [
                    "exec",
                    "--in-project",
                    "python3",
                    "setup.py",
                    "bdist_wheel"
                ]
            ],
            "documentation": null
        },
        "clean": {
            "commands": [
                [
                    "exec",
                    "--in-project",
                    "rm",
                    "-rf",
                    "dist"
                ]
            ],
            "documentation": null
        },
        "deploy": {
            "commands": [
                [
                    "upload"
                ]
            ],
            "documentation": null
        },
        "flow": {
            "commands": [
                [
                    "upload"
                ]
            ],
            "documentation": null
        },
        "test.create-docker-image": {
            "commands": [
                [
                    "exec",
                    "--in-project",
                    "docker",
                    "build",
                    "-t",
                    "clk",
                    "."
                ]
            ],
            "documentation": null
        },
        "test.flow": {
            "commands": [
                [
                    "test",
                    "run"
                ]
            ],
            "documentation": null
        },
        "test.run": {
            "commands": [
                [
                    "exec",
                    "docker",
                    "run",
                    "--rm",
                    "--name",
                    "clk-test",
                    "clk",
                    "pytest",
                    "/src/"
                ]
            ],
            "documentation": null
        },
        "upload": {
            "commands": [
                [
                    "exec",
                    "--in-project",
                    "twine",
                    "upload",
                    "dist/*"
                ]
            ],
            "documentation": null
        }
    },
    "flowdeps": {
        "build": [
            "clean"
        ],
        "test.run": [
            "test.create-docker-image"
        ],
        "upload": [
            "build"
        ]
    },
    "parameters": {
        "flow": [
            "--flow"
        ],
        "test.flow": [
            "--flow"
        ]
    }
}
